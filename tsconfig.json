{
  "compilerOptions": {
    "rootDirs": ["src/lib", "src/demo"],
    "outDir": "build",
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "declaration": true,
    "lib": ["es7", "dom"],
    "types": ["webpack-env", "node"],
    "paths": {
      "scss/*": ["./src/lib/scss/*"]
    }
  },
  "exclude": ["bin", "node_modules"]
}
